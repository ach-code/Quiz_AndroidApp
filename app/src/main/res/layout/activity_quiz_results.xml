<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_background"
    tools:context=".QuizResults">

    <ImageView
        android:id="@+id/badge_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/badge_icon" />

    <TextView
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badge_icon"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="You've Successfully completed a quiz"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complete"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="#FFF">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quizSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 6"
            android:textColor="#FFF"
            android:textSize="50sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start New Quiz"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/round_back_orange20"/>




</RelativeLayout>